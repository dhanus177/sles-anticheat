<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClient"
        xmlns:viewModels="clr-namespace:WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="Anti-Cheat Dashboard" Height="600" Width="900">
    <Window.DataContext>
        <viewModels:MainViewModel />
    </Window.DataContext>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0 0 0 8" VerticalAlignment="Center">
            <TextBlock Text="Anti-Cheat Detections" FontSize="20" FontWeight="SemiBold" />
            <Button Content="Refresh" Margin="12 0 0 0" Padding="12 6"
                    Command="{Binding RefreshCommand}" />
            <TextBlock Text="Last updated: " Margin="20 0 4 0" VerticalAlignment="Center" />
            <TextBlock Text="{Binding LastUpdated}" VerticalAlignment="Center" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Detections}" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Player" Binding="{Binding PlayerName}" Width="*" />
                <DataGridTextColumn Header="Type" Binding="{Binding Type}" Width="150" />
                <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="2*" />
                <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="180" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
